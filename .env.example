###############################################
# Tzylo Auth CE - Example Environment File
# Copy this file to `.env` and update values.
###############################################

# ------------------------------------------------
# üîí REQUIRED CONFIG
# ------------------------------------------------

# Secret used to sign JWT access tokens
JWT_SECRET=your_jwt_secret_here



# ------------------------------------------------
# üóÑÔ∏è DATABASE CONFIG
# ------------------------------------------------

# Provide your own DB URL:
# Examples:
#   Postgres:   postgres://user:pass@localhost:5432/authdb
#   MySQL:      mysql://user:pass@localhost:3306/authdb
#   SQL Server: sqlserver://user:pass@localhost:1433;database=authdb
#
# If left empty ‚Üí SQLite fallback is used:
# file:../data/auth.db
DATABASE_URL=



# ------------------------------------------------
# üåê SERVER CONFIG
# ------------------------------------------------

# Port
PORT=7200

# Allowed origins for CORS (* for dev)
CORS_ORIGIN=*

# development | production
NODE_ENV=development



# ------------------------------------------------
# üîê TOKEN LIFECYCLE (Optional)
# ------------------------------------------------

# Access token expiry time (ms or duration string)
# Default: 15m
ACCESS_TOKEN_EXPIRES_IN=15m

# Refresh token expiry time
# Default: 7d
REFRESH_TOKEN_EXPIRES_IN=7d



# ------------------------------------------------
# üîÅ RATE LIMITING
# ------------------------------------------------

# Enable or disable rate limiting
RATE_LIMIT_ENABLED=true



# ------------------------------------------------
# üîë PASSWORD CONFIG
# ------------------------------------------------

# Bcrypt salt rounds (default 10)
BCRYPT_SALT_ROUNDS=10



# ------------------------------------------------
# üìß SMTP CONFIG (For OTP Emails)
# ------------------------------------------------

# Default works for Gmail SMTP
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587

# Optional: provide SMTP username & password
SMTP_USERNAME=
SMTP_PASSWORD=



# ------------------------------------------------
# ‚ö° REDIS CACHE (Optional)
# ------------------------------------------------

# Format: redis://localhost:6379
REDIS_URL=

# Retry attempts before giving up
REDIS_MAX_RETRIES=1



# ------------------------------------------------
# üç™ COOKIE CONFIG (Optional)
# ------------------------------------------------

COOKIE_SECRET=
# Options: Strict | Lax | None
COOKIE_SAME_SITE=



# ------------------------------------------------
# üè∑Ô∏è APP META
# ------------------------------------------------

APP_NAME=Tzylo
